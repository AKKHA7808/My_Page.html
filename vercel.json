{
  "version": 2,
  "name": "django-portfolio",
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "env": {
    "DEBUG": "False",
    "DJANGO_ENV": "production",
    "DJANGO_SETTINGS_MODULE": "portfolio.settings.production"
  },
  "build": {
    "env": {
      "PYTHONPATH": "."
    }
  },
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true
  },
  "functions": {
    "index.py": {
      "includeFiles": "**",
      "excludeFiles": [
        "node_modules/**",
        ".git/**",
        "__pycache__/**",
        "*.pyc",
        ".venv/**",
        "venv/**",
        "*.log"
      ]
    }
  }
}

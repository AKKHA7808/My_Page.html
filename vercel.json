{
  "version": 2,
  "name": "django-portfolio",
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.11"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "index.py"
    },
    {
      "src": "/students/(.*)",
      "dest": "index.py"
    },
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "env": {
    "DEBUG": "False",
    "DJANGO_ENV": "production",
    "DJANGO_SETTINGS_MODULE": "portfolio.settings.production",
    "PYTHONPATH": "."
  },
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "portfolio.settings.production",
      "DEBUG": "False",
      "PYTHONPATH": "."
    }
  },
  "functions": {
    "index.py": {
      "includeFiles": "**",
      "excludeFiles": [
        "node_modules/**",
        ".git/**",
        "__pycache__/**",
        "*.pyc",
        ".venv/**",
        "venv/**",
        "*.log",
        ".env",
        "db.sqlite3"
      ],
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "github": {
    "enabled": true,
    "autoAlias": true,
    "autoJobCancelation": true
  }
}
